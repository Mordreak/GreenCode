{% extends '::base.html.twig' %}
{% block css %}
    {% include 'result.html.twig' %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="search-box" id="SBox">
            <div id="result_box">
                <p>Search results for « test »</p>
                <p>{{ results|length }} results found</p>
            </div>
        </div>
    </div>
    {% if results %}
        <div id="search-results" class="container">
            <div class="container search-box">
                {% for dentist in results %}
                    <a id="content" href="{{ path('gc_main_detail', {'dentist_id': dentist.id }) }}">
                        <div id="detail">
                            <ul>
                                <li>{{ dentist.firstname }} {{ dentist.lastname }}</li>
                                {% if dentist.specialty | length > 0 %}
                                    <li>{{ dentist.specialty }}</li>
                                {% endif %}
                                <li>{{ dentist.address }} {{ dentist.city }}</li>
                                <li>{{ dentist.phone }}</li>
                            </ul>
                        </div>
                        <div id="right">
                            <div id="photo">
                                <img src="data:image/png;{{ dentist.image }}"/>
                            </div>
                            <div id="button-detail"><span>Details ></span></div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}
