{% extends '::base.html.twig' %}
{% block css %}
    {% include 'detail.html.twig' %}
{% endblock %}
{% block body %}
    <div class="detail container">
        <div class="title">
            <img src="{{ dentist.image }}" title="{{ dentist.firstname }} {{ dentist.lastname }}'s photo">
            <h1>{{ dentist.firstname }} {{ dentist.lastname }}</h1>
        </div>
        <div class="detail">
            {% if dentist.specialty | length > 0 %}
                <h3 class="item specialty"><span class="label">Specialty: </span><span class="value">{{ dentist.specialty }}</span></h3>
            {% endif %}
            <div class="contact">
                <h3 class="item phone"><span class="label">Phone: </span><span class="value">{{ dentist.phone }}</span></h3>
                <h3 class="item email"><span class="label">Email: </span><span class="value">{{ dentist.email }}</span></h3>
                <h3 class="item address"><span class="label">Address: </span><span class="value">{{ dentist.address }} {{ dentist.city }}</span></h3>
            </div>
            {% if dentist.HasOpenings %}
                <div class="opening-hours">
                    <h4>Opening hours</h4>
                    {% if dentist.MondayOpened %}
                        <p class="item"><span class="label day">Monday: </span><span class="value hours">{{ dentist.MondayOpeningFormatted }} - {{ dentist.MondayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Monday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.TuesdayOpened %}
                        <p class="item"><span class="label day">Tuesday: </span><span class="value hours">{{ dentist.TuesdayOpeningFormatted }} - {{ dentist.TuesdayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Tuesday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.WednesdayOpened %}
                        <p class="item"><span class="label day">Wednesday: </span><span class="value hours">{{ dentist.WednesdayOpeningFormatted }} - {{ dentist.WednesdayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Wednesday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.WednesdayOpened %}
                        <p class="item"><span class="label day">Thursday: </span><span class="value hours">{{ dentist.ThursdayOpeningFormatted }} - {{ dentist.ThursdayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Thursday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.FridayOpened %}
                        <p class="item"><span class="label day">Friday: </span><span class="value hours">{{ dentist.FridayOpeningFormatted }} - {{ dentist.FridayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Friday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.SaturdayOpened %}
                        <p class="item"><span class="label day">Saturday: </span><span class="value hours">{{ dentist.SaturdayOpeningFormatted }} - {{ dentist.SaturdayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Saturday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                    {% if dentist.SundayOpened %}
                        <p class="item"><span class="label day">Sunday: </span><span class="value hours">{{ dentist.SundayOpeningFormatted }} - {{ dentist.SundayClosingFormatted }}</span></p>
                    {% else %}
                        <p class="item"><span class="label day">Sunday: </span><span class="value closed">Closed</span></p>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
